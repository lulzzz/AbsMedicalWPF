<Window x:Class="AbsMedical.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbsMedical"
        mc:Ignorable="d"
        Title="AbsMedical - Login" Height="234.056" Width="525" ResizeMode="NoResize">
    <Grid>
        <Canvas Margin="10,10,10,10">
            <Label Name="lblLogin" Content="Login you to your account with your email and password to access the content" FontWeight="Bold" Canvas.Left="25" Canvas.Top="10"/>
            <Label Name="lblEmail" Content="Email" Canvas.Left="52" Canvas.Top="56" />
            <Label x:Name="lblPassword" Content="Password" Canvas.Left="52" Canvas.Top="94" />
            <Label x:Name="lblError" Content="" Canvas.Left="52" Canvas.Top="133" Width="217" />

            <TextBox Name="txtPassword" Width="225" Canvas.Left="149" Canvas.Top="97" />
            <TextBox Name="txtEmail" Width="225" Canvas.Left="149" Canvas.Top="60" />
            
            <Button x:Name="btnOK" Content="Sign in" Canvas.Left="293" Canvas.Top="136" Width="75" Click="btnOK_Click"/>
            <Button x:Name="btnExit" Content="Exit" Canvas.Left="223" Canvas.Top="136" Width="55" Click="btnExit_Click"/>





        </Canvas>
    </Grid>
</Window>
