<Window x:Class="AbsMedical.Forms.AbsMedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbsMedical.Forms"
        mc:Ignorable="d"
        Title= "Medical Certificate" Height="748.456" Width="1062.97">
    <Grid>
        <GroupBox x:Name="grpBxStudent" Header="Student" Margin="10,29,0,291" HorizontalAlignment="Left" Width="471">
            <Canvas Margin="5,5,5,5">
                <Label x:Name="lblFirstname" Content="Firstname:" Canvas.Left="10" Canvas.Top="10" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="firstname" Content="[Firstname]" Canvas.Left="142" Canvas.Top="10" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="lblLastname" Content="Lastname:" Canvas.Left="10" Canvas.Top="42" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="lastname" Content="[Lastname]" Canvas.Left="142" Canvas.Top="42" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="lblBirth" Content="Date of birth:" Canvas.Left="10" Canvas.Top="74" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="birth" Content="[Date of birth]" Canvas.Left="142" Canvas.Top="74" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="lblBirthPlace" Content="Place of birth:" Canvas.Left="10" Canvas.Top="106" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="birthPlace" Content="[Place of birth]" Canvas.Left="142" Canvas.Top="106" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="lblAddress" Content="Address:" Canvas.Left="10" Canvas.Top="138" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="address" Content="[Address]" Canvas.Left="142" Canvas.Top="138" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="address2" Content="[Address]" Canvas.Left="142" Canvas.Top="170" Height="27" VerticalAlignment="Top"/>
            </Canvas>
        </GroupBox>
        <GroupBox x:Name="grpBxSchool" Header="School" Margin="10,431,0,10" HorizontalAlignment="Left" Width="471">
            <Canvas>
                <Label x:Name="lblSchool" Content="School:" Canvas.Left="10" Canvas.Top="10" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="school" Content="[School Name]" Canvas.Left="142" Canvas.Top="10" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="lblSchoolAdrs" Content="Address:" Canvas.Left="10" Canvas.Top="42" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="schoolAdrs" Content="[School Address]" Canvas.Left="142" Canvas.Top="42" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="schoolAdrs2" Content="[School Address]" Canvas.Left="142" Canvas.Top="74" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="lblSchoolPhone" Content="Phone number:" Canvas.Left="10" Canvas.Top="106" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="schoolPhone" Content="[School Phone]" Canvas.Left="142" Canvas.Top="106" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="lblSchoolMail" Content="Mail address:" Canvas.Left="10" Canvas.Top="138" Height="27" VerticalAlignment="Top"/>
                <Label x:Name="schoolMail" Content="[School Mail]" Canvas.Left="142" Canvas.Top="138" Height="27" VerticalAlignment="Top"/>
            </Canvas>
        </GroupBox>
        <GroupBox x:Name="grpBxProof" Header="Proof" Canvas.Left="276" Margin="0,29,10,59" HorizontalAlignment="Right" Width="559">
            <Canvas Margin="5,5,5,5">
                <Label x:Name="lblDateVisit" Content="Date:" Canvas.Left="10" Canvas.Top="10"/>
                <Label x:Name="lblDate" Content="[Date of the day]" Canvas.Left="76" Canvas.Top="10"/>
                <Label x:Name="lblMotive" Content="Motive:" Canvas.Left="10" Canvas.Top="41" RenderTransformOrigin="-0.132,-0.462"/>
                <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="172" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="517" Canvas.Left="10" Canvas.Top="72"/>
                <DatePicker Name="dtStart" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="378" Canvas.Top="258"/>
                <DatePicker Name="dtEnd" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="92" Canvas.Top="258"/>
                <Label x:Name="lblStart" Content="Start Date:" Canvas.Left="10" Canvas.Top="257"/>
                <Label x:Name="lblEnd" Content="End Date:" Canvas.Left="299" Canvas.Top="256"/>
            </Canvas>
        </GroupBox>
        <Button x:Name="btnSend" Content="Send by mail" Canvas.Left="421" Canvas.Top="421" Margin="0,0,21,10" Height="34" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="101"/>
        <Button x:Name="btnPrint" Content="Print" Margin="0,0,144,10" HorizontalAlignment="Right" Width="105" Height="34" VerticalAlignment="Bottom"/>
        <Button x:Name="btnExport" Content="Export to PDF" Canvas.Left="421" Canvas.Top="421" Margin="0,0,273,10" Height="34" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="101"/>
    </Grid>
</Window>
